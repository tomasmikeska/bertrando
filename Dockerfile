FROM pytorch/pytorch:1.7.0-cuda11.0-cudnn8-runtime

# --------------------------------------------------------------------
# System libs
# --------------------------------------------------------------------

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential apt-utils ca-certificates wget git

# --------------------------------------------------------------------
# Copy files and set workdir
# --------------------------------------------------------------------

COPY . /bumblebee/
WORKDIR /bumblebee

# --------------------------------------------------------------------
# PyPI packages
# --------------------------------------------------------------------

RUN pip install -r requirements.txt

# --------------------------------------------------------------------
# Ports
# --------------------------------------------------------------------

# Tensorboard port
EXPOSE 6006
